# General options
startup_message off
vbell off
autodetach on
altscreen on
shelltitle "$ |bash"
defscrollback 10000
defutf8 on
nonblock on

# Status lines
hardstatus alwayslastline
hardstatus string '%{= kK}%{w}%H %{K}%= %{= kw}%?%-Lw%?%{G}(%{W}%n*%f %t%?(%u)%?%{G})%{w}%?%+Lw%?%?%= %{K}%{G} %{w}%c%{K}'

# Sessions loaded by default
screen -t bash bash
