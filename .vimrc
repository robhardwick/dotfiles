" General
set nocompatible
set autoread
set nobackup
set hidden
set number
set history=1000
set shortmess=atI
set backspace=indent,eol,start
set incsearch
set hlsearch
set ruler
set showmode

" Tabbing and indenting
set expandtab
set tabstop=4
set sw=4
set smartindent

" Encoding and line endings
set encoding=utf-8
set ff=unix
set ffs=unix

" Syntax
syntax on
filetype on
filetype plugin on
filetype indent on

" Filename completion
set wildmenu
set wildmode=list:longest

" Encryption
set cm=blowfish2
